{% extends '_layout/_index.html.twig' %}

{% block title %}Vos Préférences{% endblock %}

{% block body_class %}match settings{% endblock %}

{% block main %}
    <header>
        <h1>Vos Préférences</h1>
    </header>

    {% set context = app_contextService.context(app.user) %}
    <header>
        <div class="app-text">
            <p>
                <strong>Jour de la semaine :</strong>
                {{ context['dayOfWeek'] | title }}
            </p>
            <p>
                <strong>Moment de la journée :</strong>
                {{ context['timeOfDay'] | title }}
            </p>
            <p>
                <strong>Saison :</strong>
                {{ context['season'] | title }}
            </p>
        </div>
    </header>

    <header>
        <p class="app-text">
            Choisissez votre
            <strong>humeur</strong> du moment afin d'affiner les suggestions. Si vous n'en choisissez aucune, le mode
            <strong>aléatoire</strong> sera activé.
        </p>
    </header>

    <section class="app-section">
        <div class="moods">
            {% for mood in app_moodService.moods %}
                <a href="{{ path('app_match_mood', {'slug': mood.slug}) }}" class="{% if app.user.mood != mood %}inactive{% endif %}" title="{{ mood.name }}">
                    {{ ux_icon(mood.icon, {'class': 'app-icon'}) }}
                </a>
            {% endfor %}
        </div>
    </section>
{% endblock %}
