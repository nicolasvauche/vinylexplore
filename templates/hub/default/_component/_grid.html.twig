{% if albums %}
    <div class="app-grid two">
        {% for album in albums %}
            <div class="app-card">
                <a href="{{ path('app_hub_view', {'slug': album.slug}) }}">
                    <div class="card-header">
                        <img src="{{ asset('uploads/album/' ~ album.cover) }}" class="card-image" alt="{{ album.artist.name }} - {{ album.title }}"/>
                    </div>

                    <div class="card-body">
                        <p class="card-subtitle">{{ album.artist.name }}</p>
                        <p class="card-title">
                            {{ album.title | length > 50 ? album.title | slice(0, 50) ~ '…' : album.title }}
                        </p>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
{% else %}
    <p>
        <strong>Aucun Album…</strong>
    </p>
{% endif %}
