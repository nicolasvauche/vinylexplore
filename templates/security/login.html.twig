{% extends '_layout/_index.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body_class %}form login{% endblock %}

{% block main %}
    <header>
        <h1>Connectez-vous</h1>
    </header>

    <section class="app-section">
        <form method="post" class="app-form">
            <fieldset class="form-fieldset">
                <div class="form-group">
                    <div class="control">
                        <label for="username" class="form-label required">Votre adresse e-mail</label>
                        <input type="email"
                               value="{{ last_username }}"
                               name="_username"
                               id="username"
                               class="form-control"
                               autocomplete="email"
                               required
                               autofocus/>
                    </div>
                </div>

                <div class="form-group">
                    <div class="control">
                        <label for="password" class="form-label required">Votre mot de passe</label>
                        <input type="password"
                               name="_password"
                               id="password"
                               class="form-control"
                               autocomplete="current-password"
                               required/>
                    </div>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="app-button cta" type="submit">Connexion</button>
            </fieldset>
        </form>
    </section>
{% endblock %}
