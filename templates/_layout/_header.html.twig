<header class="app-header">
    <div class="app-settings">
        {% if app.user %}
            <a href="{{ path('app_profile') }}" class="profile {% if app.request.get('_route') == 'app_profile' %}active{% endif %}" title="Mon Compte">
                {{ ux_icon('mdi:user', {'class': 'app-icon'}) }}
            </a>
            <a href="{{ path('app_match_settings') }}" class="mood {% if app.request.get('_route') == 'app_match_settings' %}active{% endif %}" title="{{ app.user.mood ? app.user.mood.name : 'Mode aléatoire' }}">
                {% if app.user.mood %}
                    {{ ux_icon(app.user.mood.icon, {'class': 'app-icon'}) }}
                {% else %}
                    {{ ux_icon('subway:random', {'class': 'app-icon'}) }}
                {% endif %}
            </a>
        {% else %}
            &nbsp;
        {% endif %}
    </div>

    <nav class="app-navigation">
        <a href="{{ path('app_match_home') }}" class="match {% if 'app_match_' in app.request.get('_route') %}active{% endif %}" title="VinyleMatch">
            <img src="{{ asset('img/logo_vinylematch.png') }}" alt="Logo VinyleMatch"/>
            Match
        </a>
        <span class="logo">
            <img src="{{ asset('img/logo.png') }}" alt="Logo VinyleXplore"/>
            VinyleXplore
        </span>
        <a href="{{ path('app_hub_home') }}" class="hub {% if 'app_hub_' in app.request.get('_route') %}active{% endif %}" title="VinyleHub">
            <img src="{{ asset('img/logo_vinylehub.png') }}" alt="Logo VinyleHub"/>
            Hub
        </a>
    </nav>

    {% if app.user %}
        <div class="app-logout">
            <a href="{{ path('app_logout') }}" class="logout" title="Déconnexion" onclick="return window.confirm('Vous partez ?')">
                {{ ux_icon('mdi:logout', {'class': 'app-icon'}) }}
            </a>
        </div>
    {% endif %}
</header>
